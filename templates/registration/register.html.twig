{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
body{
    background: #282828;
}
   .formContainer{
      width: 60vw;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      padding: 30px;
      border: 4px solid #191919;
    box-shadow: -4px -4px 10px rgba(67, 67, 67, 0.5),
        inset 4px 4px 10px rgba(0, 0, 0, 0.5),
        inset -4px -4px 10px rgba(67, 67, 67, 0.3),
        4px 4px 10px rgba(0, 0, 0, 0.3);

   }
   #form{

  
      display: flex;
     justify-content: center;
     font-family: monospace;
     display: block;
   }
 #form input{
background-color: inherit;
outline: none;
border: none;
color: #ECEFF1;
    border-bottom: 2px solid #FBC02D;
    padding-left: 10px;
    width: 350px;
   }

   label{
    width: 100px;
    text-align: center;
    color: yellow;

   }
   h1{
    text-align: center;
    width: 100px;
    color: #FBC02D;
   }
   .labin{
    display: flex;
    justify-content: space-around;
   }
   #form .check{
    width: 30px;
    height: 30px;
    background-color: yellow;
    margin-left: 50px;
    border-radius: 50px;

   }
     #form button , .btn {
            width: 130px;
            height: 50px;
                
            letter-spacing: 1px;
            margin-left:20vw ;
            margin-top: 10px;
            padding: 13px 20px 13px;
            outline: 0;
            border: 1px solid black;
            cursor: pointer;
            position: relative;
            background-color: rgba(0, 0, 0, 0);
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
          }
          .check:after {
            content: "";
            background-color: #ffe54c;
            width: 100%;
            z-index: -1;
            position:relative;
            display: block;
            height: 100%;
            top: 4px;
            left: 7px;
            transition: 0.2s;
          }

          #form button:after , .btn:after{
            content: "";
            background-color: #ffe54c;
            width: 100%;
            z-index: -1;
            position: absolute;
            height: 100%;
            top: 7px;
            left: 7px;
            transition: 0.2s;
          }
        .ckeck:after:hover {
           transform: translate(10%,10%);
          }

         #form button:hover:after ,.btn:hover:after{
            top: 0px;
            left: 0px;
          }

</style>
<div class="formContainer">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>
    {{ form_start(registrationForm,{'attr':{'id':'form'}}) }}
    {{ form_row(registrationForm.firstName) }}
    {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
    <a href="{{ path('app_loginz') }}"><button  type="submit" class="btn">Log in</button></a>

    </div>
     {% block javascripts %}
        <script>
    
        </script>
        {% endblock %}
{% endblock %}
